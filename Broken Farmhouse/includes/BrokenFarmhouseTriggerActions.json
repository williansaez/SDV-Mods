{
	"Changes": [
	//Trigger Actions

	//Set initial wallpaper and floorpaper (Thank you, mushymato!)
	{
		"Action": "EditData",
		"Target": "Data/TriggerActions",
		"Entries": {
			"glymr.BrokenFarmhouse.SetFloorWalls": {
			"Id":"glymr.BrokenFarmhouse.SetFloorWalls",
			"Condition": "PLAYER_FARMHOUSE_UPGRADE Current 0 0",
			"Trigger": "DayStarted",
			"Actions": [
			"mushymato.MMAP_SetFlooring 0",
			"mushymato.MMAP_SetWallpaper 0",
			],
			"MarkActionApplied": true,
			},
		},
	},

	//Mail from Robin received after final upgrade complete
	{
	"Action": "EditData",
	"Target": "Data/Mail",
	"Entries": { "glymr.BrokenFarmhouse_UpgradeMail_03": "{{i18n:glymr.BrokenFarmhouse.UpgradeMail03}}", 
			},
	},
	//Trigger to send Robin's upgrade mail
	{
	"Action":  "EditData",
	"Target": "Data/TriggerActions",
	"When": {
		"HasFlag |contains=FirstPurchase_Corner": true,
		"HasFlag |contains=FirstPurchase_Southern": true,
		"HasFlag |contains=FirstPurchase_Attic": true,
		"DLX.Bundles/Purchased": "glymr.BrokenFarmhouse.FixUp25",
		"FarmhouseUpgrade": "3",
		},
	"Entries": {
		"glymr.BrokenFarmhouse.Upgrade03Mail": {
		"Id": "glymr.BrokenFarmhouse.Upgrade03Mail",
		"Trigger": "DayStarted",
		"Actions": [
			"AddMail Current glymr.BrokenFarmhouse_UpgradeMail_03",
				],
        "MarkActionApplied": true,
			},
		},
	},
	
